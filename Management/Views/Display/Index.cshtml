<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh Sách Nhiệm Vụ</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Danh Sách Nhiệm Vụ</h2>
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Nhiệm Vụ</th>
                    <th scope="col">Người Giao Nhiệm Vụ</th>
                    <th scope="col">Thời Gian Giao Nhiệm Vụ</th>
                    <th scope="col">Hành Động</th>
                </tr>
            </thead>
            <tbody id="tasksTableBody">
                
            </tbody>
        </table>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {

            function loadTasks() {
                $.ajax({
                    url: '@Url.Action("GetWork", "Display")', 
                    method: 'GET',
                    dataType: 'json',
                    success: function (data) {
                        const tableBody = $('#tasksTableBody');
                        tableBody.empty();

                        data.forEach(task => {
                            const row = $('<tr>');
                            $('<td>').text(task.description).appendTo(row);
                            $('<td>').text(task.name).appendTo(row);
                            $('<td>').text(new Date(task.dateWork).toLocaleDateString('vi-VN')).appendTo(row);
                            const actionCell = $('<td>');
                            if (task.status === 1) {
                                $('<button>')
                                    .attr('type', 'button')
                                    .addClass('btn btn-success btn-sm')
                                    .text('Hoàn Thành')
                                    .on('click', function () {
                                        if (confirm('Bạn có chắc chắn muốn cập nhật thông tin nhiệm vụ này?')) {
                                            $.ajax({
                                                url: '@Url.Action("UpdateStatus", "Display")',
                                                type: 'POST',
                                                contentType: 'application/json',
                                                data: JSON.stringify({
                                                    Id: task.id,
                                                    Status: 0 
                                                }),
                                                success: function () {
                                                    alert('Nhiệm vụ đã được cập nhật thành công.');
                                                    loadTasks();
                                                },
                                                error: function (xhr, status, error) {
                                                    alert('Cập nhật nhiệm vụ thất bại: ' + xhr.responseText);
                                                }
                                            });
                                        }
                                    })
                                    .appendTo(actionCell);

                            } else { 
                                $('<button>')
                                    .attr('type', 'button')
                                    .addClass('btn btn-secondary btn-sm')
                                    .text('Đã hoàn thành')
                                    .attr('disabled', true)
                                    .appendTo(actionCell);
                            }
                            actionCell.appendTo(row);

                            row.appendTo(tableBody);
                        });
                    },
                    error: function (xhr, status, error) {
                        console.error('Lỗi khi lấy dữ liệu:', error);
                    }
                });
            }

          
            loadTasks();
        });
    </script>
</body>
</html>
