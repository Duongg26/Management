@{
    ViewData["Title"] = "Home";
}
    <body>
    <div class="container mt-4">
        <h1 class="mb-4">Chi Tiết Người Dùng</h1>
        <div class="card">
            <div class="card-body">
                <form>
                    <div class="mb-3">
                        <label for="userName" class="form-label">Tên</label>
                        <input type="text" class="form-control" id="userName" value="@ViewBag.Name" disabled>
                    </div>
                    <div class="mb-3">
                        <label for="userAddress" class="form-label">Địa chỉ</label>
                        <input type="text" class="form-control" id="userAddress" value="@ViewBag.Addr" disabled>
                    </div>
                    <div class="mb-3">
                        <label for="userRole" class="form-label">Chức vụ</label>
                        <input type="text" class="form-control" id="userRole" value="@ViewBag.Role" disabled>
                    </div>
                    <!-- Thêm các trường khác nếu cần -->
                    <div class="d-flex justify-content-end">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </body> 



